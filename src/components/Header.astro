<header class='bg-black fixed w-full z-0'>
  <nav
    class='bg-gray-50 min-h-[10vh] px-8 flex justify-between items-center m-auto md:max-w-[92%] shadow-md'
  >
    <div class=''>
      <svg
        class='w-auto h-10'
        width='200'
        height='200'
        viewBox='0 0 100 100'
        xmlns='http://www.w3.org/2000/svg'
      >
        <!-- Hexágono con borde negro -->
        <polygon
          points='50,5 95,25 95,75 50,95 5,75 5,25'
          fill='transparent'
          class=''
          stroke='#0f172a'
          stroke-width='8'></polygon>

        <!-- Texto dentro del hexágono -->
        <text
          x='50%'
          y='50%'
          font-size='35'
          text-anchor='middle'
          dy='.3em'
          font-weight='bold'
          class='bg-background'
          fill=''
        >
          AM
        </text>
      </svg>
    </div>

    <div
      id='nav-menu'
      class='bg-gray-50 fixed md:static left-0 top-[-100%] w-full md:w-auto flex md:items-center justify-between gap-3 transition-all duration-200 -z-10 md:z-0'
    >
      <ul
        class='flex flex-col gap-9 p-5 md:p-0 md:flex-row md:items-center md:gap-4'
      >
        <li
          class='font-semibold text-xl md:text-base text-gray-800 hover:bg-gray-200 py-1 px-3 rounded transition duration-300'
        >
          <a href='#'>Home</a>
        </li>
        <li
          class='font-semibold text-xl md:text-base text-gray-800 hover:bg-gray-200 py-1 px-3 rounded transition duration-300'
        >
          <a href='#'>Acerca de</a>
        </li>
        <li
          class='font-semibold text-xl md:text-base text-gray-800 hover:bg-gray-200 py-1 px-3 rounded transition duration-300'
        >
          <a href='#'>Skills</a>
        </li>
        <li
          class='font-semibold text-xl md:text-base text-gray-800 hover:bg-gray-200 py-1 px-3 rounded transition duration-300'
        >
          <a href='#'>Proyectos</a>
        </li>
        <li
          class='bg-background text-xl md:text-base font-semibold text-white hover:opacity-90 py-1 px-3 rounded transition duration-300'
        >
          <a href='#'>Contacto</a>
        </li>
      </ul>

      <div class='md:w-8 text-center'>
        <i
          id='dark-mode'
          class='fa-solid fa-moon pt-4 pr-7 md:p-0 text-background text-2xl cursor-pointer'
        ></i>
      </div>
    </div>

    <div class='md:hidden'>
      <i
        id='menu-icon'
        class='fa-solid fa-bars text-2xl text-background transition-all'></i>
    </div>
  </nav>
  <script>
    const menuIcon = document.getElementById('menu-icon');
    const navMenu = document.getElementById('nav-menu');
    const darkMode = document.getElementById('dark-mode');

    menuIcon?.addEventListener('click', () => {
      navMenu?.classList.toggle('top-[-100%]');
      navMenu?.classList.toggle('top-[10%]');

      menuIcon.classList.toggle('fa-bars');
      menuIcon.classList.toggle('fa-close');
    });

    darkMode?.addEventListener('click', () => {
      darkMode.classList.toggle('fa-sun');
      darkMode.classList.toggle('fa-moon');
    });
  </script>
</header>
