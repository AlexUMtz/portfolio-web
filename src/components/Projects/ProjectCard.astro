---
interface Props {
  imgUrl: string;
  name: string;
  githubUrl: string;
  alt: string;
  languages: { name: string; urlLan: string }[];
}

const { imgUrl, name, githubUrl, alt, languages } = Astro.props;
---

<div
  class='scroll-reveal hover:-translate-y-2 transiton-all duration-300 card__project bg-blueDark shadow-2xl flex flex-col rounded-2xl'
>
  <img class='w-full rounded-t-2xl' src={imgUrl} alt={alt} />
  <div class='flex justify-between items-center px-5 py-3'>
    <span class='text-white my-3 text-lg font-medium tracking-wide'>{name}</span
    >

    <a href={githubUrl}
      ><i class='fa-brands fa-github text-2xl text-enfasys'></i></a
    >
  </div>
  <div class='flex flex-row justify-evenly gap-3 pb-7 pl-5 w-1/4'>
    {
      languages.map(({ name, urlLan }) => {
        return <img class='w-auto h-5' src={urlLan} alt={name} />;
      })
    }
  </div>
</div>
<style>
  .card__project {
  }
</style>
