---
const skills = [
  { imgUrl: 'java.svg', name: 'Java', alt: 'Java-logo' },
  { imgUrl: 'python.svg', name: 'Python', alt: 'Python-logo' },
  { imgUrl: 'js.svg', name: 'JavaScript', alt: 'JS-logo' },
  { imgUrl: 'react.svg', name: 'React', alt: 'React-logo' },
  { imgUrl: 'html5.svg', name: 'HTML', alt: 'HTML-logo' },
  { imgUrl: 'css.svg', name: 'CSS', alt: 'CSS-logo' },
  { imgUrl: 'tailwindcss.svg', name: 'Tailwind', alt: 'Tailwind-logo' },
  { imgUrl: 'aws.svg', name: 'AWS', alt: 'AWS-logo' },
  { imgUrl: 'git.svg', name: 'Git', alt: 'Git-logo' },
  { imgUrl: 'linux.svg', name: 'Linux', alt: 'Linux-logo' },
];
---

<section class='skills__container section-container flex flex-col gap-y-10'>
  <div class='flex flex-col items-center gap-y-6'>
    <h2 class='text-title'>
      <span class='text-enfasys'>&lt;&gt; </span>Skills
    </h2>
    <p class='text-subtitle'>Mis habilidades</p>
  </div>
  <div class='grid grid-cols-2 md:grid-cols-5 justify-evenly gap-5'>
    {
      skills.map(({ imgUrl, name, alt }) => {
        return (
          <div class='backdrop-blur-sm bg-gray-700/10 group hover:bg-opacity-90 text-center flex flex-col py-5 items-center border-gray-400 border-solid rounded-lg gap-y-2 shadow-xl transition-all duration-300'>
            <img
              class='h-14 w-14 group-hover:scale-110 transition-all duration-300'
              src={imgUrl}
              alt={alt}
            />
            <p class='text-white text-lg pt-2 group-hover:scale-110 transition-all duration-300'>
              {name}
            </p>
          </div>
        );
      })
    }
  </div>
</section>
<style>
  .skills__container {
    background:
      radial-gradient(
          35.36% 35.36% at 100% 25%,
          #0000 66%,
          #17103e 68% 70%,
          #0000 72%
        )
        44px 44px / calc(2 * 44px) calc(2 * 44px),
      radial-gradient(
          35.36% 35.36% at 0 75%,
          #0000 66%,
          #17103e 68% 70%,
          #0000 72%
        )
        44px 44px / calc(2 * 44px) calc(2 * 44px),
      radial-gradient(
          35.36% 35.36% at 100% 25%,
          #0000 66%,
          #17103e 68% 70%,
          #0000 72%
        )
        0 0 / calc(2 * 44px) calc(2 * 44px),
      radial-gradient(
          35.36% 35.36% at 0 75%,
          #0000 66%,
          #17103e 68% 70%,
          #0000 72%
        )
        0 0 / calc(2 * 44px) calc(2 * 44px),
      repeating-conic-gradient(#0e0c15 0 25%, #0000 0 50%) 0 0 / calc(2 * 44px)
        calc(2 * 44px),
      radial-gradient(#0000 66%, #17103e 68% 70%, #0000 72%) 0 calc(44px / 2) /
        44px 44px #0e0c15;
  }
</style>
